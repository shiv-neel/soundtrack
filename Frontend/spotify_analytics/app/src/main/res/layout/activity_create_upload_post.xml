<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateUploadPostActivity"
    android:background="#ebedeb">

    <LinearLayout
        android:id="@+id/create_post_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:padding="20dp"
        android:background="@drawable/rounded_rectangle"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/create_post_item_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/create_post_item_header_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="TODO"
                android:src="@drawable/baseline_person_24" />
            <TextView
                android:id="@+id/create_post_item_header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="musiclover42"/>
        </LinearLayout>


        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"/>

        <LinearLayout
            android:id="@+id/create_post_item_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/create_post_item_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_menu_gallery" />

            <LinearLayout
                android:id="@+id/create_post_item_data_text"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <TextView
            android:id="@+id/create_post_primary_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textFontWeight="400"
            android:textSize="22dp"
            android:text="Primary Data" />

        <TextView
            android:id="@+id/create_post_secondary_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:textSize="16dp"
            android:textFontWeight="300"
            android:text="Secondary Data" />
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >

            <EditText
                android:id="@+id/create_post_description"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/create_post_description_label"
                />

            <LinearLayout
                android:id="@+id/create_post_buttons"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/create_post_submit_button"
                android:layout_below="@+id/create_post_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Post"
                android:layout_marginRight="20dp"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/create_post_cancel_button"
                android:layout_below="@+id/create_post_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Cancel"
                android:textColor="@color/spotify_green"
                android:textIsSelectable="true"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>



</RelativeLayout>