<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateWrappedPostActivity">

    <RelativeLayout
        android:id="@+id/wrapped_post_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/wrapped_post_number_of_items_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:text="Number of items: "/>
        <EditText
            android:id="@+id/wrapped_post_number_of_items_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="300dp"
            android:layout_below="@id/wrapped_post_number_of_items_text_view"
            android:inputType="number"/>

        <TextView
            android:id="@+id/wrapped_post_type_text_view"
            android:layout_below="@id/wrapped_post_number_of_items_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:text="Generate Wrapped Post for my: "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wrapped_post_type_text_view"
            android:orientation="vertical">
        <Button
            android:id="@+id/generate_wrapped_post_artists_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wrapped_post_type_text_view"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="20dp"
            android:text="Top Artists"/>
        <Button
            android:id="@+id/generate_wrapped_post_albums_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="20dp"
            android:text="Top Albums"/>
            <Button
                android:id="@+id/generate_wrapped_post_songs_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="20dp"
                android:text="Top Songs"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>